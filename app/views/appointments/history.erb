<div class="breadcrumb"> <% make_breadcrumb %> 
    <%= render_breadcrumbs %>
</div>
<% if @appointments.empty? %>
  <div class="record">You don't have any appointment</div> 
<% else %>
<h3>Your appointments detail</h3>
<table class="table table-striped table-bordered table-condensed">
    <tr><th>Appointment id</th> <th>Appointment date</th><th>Department</th><th>Doctor</th></tr>
    <% @appointments.each do |appointment| %>
      <tr>
          <td><%=  appointment.id %></td>
          <td><%=  appointment.appointment_date %>  <%= appointment.slot.start_time.strftime("%H:%M%P")%></td>
          <td><%=  appointment.department.department_name%></td>
          <td><%=  appointment.doctor.user.first_name %> <%=  appointment.doctor.user.last_name %>
          </td>
      </tr>
    <% end %>
</table>
<% end %>
