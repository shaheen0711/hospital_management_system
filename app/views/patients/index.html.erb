<div class="breadcrumb"> <% make_breadcrumb %> 
    <%= render_breadcrumbs %>
</div>

<% if flash[:notice].present? %>
<%= flash[:notice] %>
<% end %>

<div class ="patient_bed_allocation">
    <div class="all_patient">List of all Patients </div>
<%= button_to "bed allocation" , new_bedallocation_path, :class => "bed_allocation_button btn"%><br><br>
</div>
<table class="table table-striped table-bordered table-condensed">
    <tr><th>id</th> <th>Patients Name</th><th>Edit/delete</th></tr>
    <% @patients.each_with_index do |patient, i| %>

      <tr><td><%= i+1  %></td>
          <td><%= link_to patient.user.first_name , patient_detail_patient_path(patient)%> 
              <%= link_to patient.user.last_name,  patient_detail_patient_path(patient) %> 
          </td><td>           
              <%= link_to  'edit', edit_patient_path(patient)  %>/
              <%= link_to  'delete', patient, :confirm => "are you sure to delete", :method => "delete"%></td></tr>
    <% end %>
</table>