<div class="breadcrumb"> 
    <% make_breadcrumb %> 
    <%= render_breadcrumbs %>
</div>
<% if flash[:notice].present? %>
  <p class="flash_msg"><%= flash[:notice] %></p>
<% end %>

<div class="container">
    <div class="register">
        <h4>Edit doctor details </h4>

        <p class="registration">
            <% form_for @doctor do |f|  %>
              <%= f.error_messages%>
          <div class="form-group">
              <label class="control-label col-sm-2">First name:</label>
              <div class="col-sm-4">
                  <%= f.text_field :first_name,  :class => "form-control", :placeholder => "enter first name"%>
              </div>
          </div>
          <div class="form-group">
              <label class="control-label col-sm-2">Last name:</label>
              <div class="col-sm-4">
                  <%= f.text_field :last_name, :class => "form-control" , :placeholder => "enter last name"%>
              </div>
          </div>

          <div class="form-group">
              <label class="control-label col-sm-2">Qualification:</label>
              <div class="col-sm-4">
                  <%= f.text_field :qualification,  :class => "form-control", :placeholder => "enter qualification"%>
              </div>
          </div>
          <div class="form-group">
              <label class="control-label col-sm-2">Experience:</label>
              <div class="col-sm-4">
                  <%= f.text_field :experience, :class => "form-control" , :placeholder => "enter experience"%>
              </div>
          </div>

          <div class="form-group">
              <label class="control-label col-sm-2">Department name:</label>
              <div class="col-sm-4">
                  <%= f.select :department_id, Department.all.collect {|x| [x.department_name, x.id]}, {:include_blank => "choose department"}, :class => "form-control" , :placeholder => "enter contact number"%><br>
              </div>
          </div>

          <div class="form-group">
              <label class="control-label col-sm-2">Nationality:</label>
              <div class="col-sm-4">
                  <%= f.text_field :nationality, :class => "form-control" , :placeholder => "enter nationality" %>
              </div>
          </div>

          <div class="form-group">
              <label class="control-label col-sm-2">Contact number:</label>
              <div class="col-sm-4">
                  <%= f.text_field :contact_number, :class => "form-control" , :placeholder => "enter contact number" %>
              </div>
          </div>
          <div class="form-group">
              <label class="control-label col-sm-2">Date of birth:</label>
              <div class="col-sm-4">
                  <%= f.date_select :date_of_birth,:start_year =>1980, :end_year =>  Date.current.year, :class => "form-control" %>
              </div>
          </div>

          <div class="form-group">
              <label class="control-label col-sm-2">Address:</label>
              <div class="col-sm-4">
                  <%= f.text_field :address, :class => "form-control" , :placeholder => "enter address"%>
              </div>
          </div>

          <div class="form-group">
              <label class="control-label col-sm-2">Email:</label>
              <div class="col-sm-4">
                  <%= f.text_field :email, :class => "form-control" , :placeholder => "abc@email.com"%>
              </div>
          </div>

          <div class="form-group">
              <label class="control-label col-sm-2">Gender:</label>
              <div class="col-sm-4">
                  <%= f.label :gender, "female", :value => "female" %>
                  <%= f.radio_button :gender, "female" %>
                  <%= f.label :gender, "male", :value => "male" %>
                  <%= f.radio_button :gender, "male" %>
                  <%= f.label :gender, "other", :value => "other" %>
                  <%= f.radio_button :gender, "other" %><br>

                  <%= f.submit "Add" , :class => "btn btn-success" %>
              </div>
          </div>
        <%  end %>
    </div>
</div>