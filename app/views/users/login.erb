

<% if flash[:notice].present? %>
  <p><%= flash[:notice] %></p>
<% end %>

<center><p><br><br>
        <% form_for :user, :url => {:action => "login"}, :method => :post do |f|  %>
          <%= f.label :username, "Username" %><br>
          <%= f.text_field :username %>

      </p>
      <p>
          <%= f.label :password, "Password"%><br />
          <%= f.password_field :password %>
      </p>
      <p><%= submit_tag "Log in" %>
        <%  end %>
</center>

