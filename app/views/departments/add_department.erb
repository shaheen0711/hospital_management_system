<div class="breadcrumb"> 
    <% make_breadcrumb %> 
    <%= render_breadcrumbs %>
</div>

<% if flash[:notice].present? %>
  <p class="flash_msg"><%= flash[:notice] %></p>
<% end %>


<br>
<% form_for :department,  :url => {:action => "add_department"}, :method => :post do |f| %>
  <div class="form-group">
      <label class="control-label col-sm-2">Department name:</label>
      <div class="col-sm-4">
          <%= f.text_field :department_name, :class => "form-control" , :placeholder => "enter department name" %><br>
          <%= f.submit "Add", :class => "add" %>
      </div>
  </div>
<% end %>